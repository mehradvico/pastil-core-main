@using Application.Common.Dto.Result
@using Application.Common.Enumerable
@using Application.Services.Order.ProductOrderSrv.Dto
@using Application.Common.Helpers
@model BaseResultDto<PaymentDto>

@{
    ViewData["Title"] = "بازگشت از پرداخت";
    var paymentModel = Model.Data;
}




@if (Model.IsSuccess)
{
    <section class="payment_callback success_payment">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="callback_box">
                        <div class="callback_img">
                            <img src="~/Assets/Payment/images/Purchase_Success.png" alt="">
                        </div>

                        <div class="callback_message">
                            <strong>@Resource.Notification.Success</strong>
                        </div>
                        @if (paymentModel.Type.Label == PaymentTypeEnum.PaymentType_ProductOrder.ToString())
                        {
                            <ul class="callback_info">
                                <li>
                                    <strong>شماره سفارش : </strong>
                                    <strong>@paymentModel.ProductOrderId</strong>

                                </li>
                                <li class="amount_paid">
                                    <strong>پیگیری پرداخت : </strong>
                                    <strong>@paymentModel.RefNumber</strong>
                                </li>
                                <li class="amount_paid">
                                    <strong>مبلغ سفارش : </strong>
                                    <strong>@paymentModel.Amount.ToString("n0") تومان</strong>
                                </li>

                            </ul>
                            <div class="callback_btns">
                                <a href="@AppSettingsHelper.BaseUrl" class="btn secondary_btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                        <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z" />
                                    </svg>بازگشت به صفحه اصلی
                                </a>

                                <a href="@AppSettingsHelper.PaymentOrderUrl(long.Parse(paymentModel.ProductOrderId))" class="btn secondary_btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                    </svg>مشاهده سفارش
                                </a>
                            </div>
                        }
                        else if (paymentModel.Type.Label == PaymentTypeEnum.PaymentType_Wallet.ToString())
                        {
                            <ul class="callback_info">
                                @if (paymentModel.CallBackTypeLabel == PaymentCallbackTypeEnum.ProductOrder.ToString())
                                {
                                    <li>
                                        <strong>شماره سفارش : </strong>
                                        <strong>@paymentModel.CallBackId</strong>

                                    </li>
                                }
                                <li class="amount_paid">
                                    <strong>پیگیری پرداخت : </strong>
                                    <strong>@paymentModel.RefNumber</strong>
                                </li>
                                <li class="amount_paid">
                                    <strong>مبلغ : </strong>
                                    <strong>@Model.Data.Amount.ToString("n0") تومان</strong>
                                </li>

                            </ul>
                        }
                        <div class="callback_btns">
                            <a href="@AppSettingsHelper.BaseUrl" class="btn secondary_btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                    <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z" />
                                </svg>بازگشت به صفحه اصلی
                            </a>
                            @if (paymentModel.Type.Label == PaymentTypeEnum.PaymentType_ProductOrder.ToString())
                            {
                                <a href="@AppSettingsHelper.PaymentOrderUrl(long.Parse(paymentModel.ProductOrderId))" class="btn secondary_btn">

                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                    </svg>مشاهده سفارش
                                </a>
                            }
                            else if (paymentModel.Type.Label == PaymentTypeEnum.PaymentType_Wallet.ToString())
                            {
                                if(paymentModel.CallBackTypeLabel==PaymentCallbackTypeEnum.ProductOrder.ToString())
                                {
                                    <a href="@AppSettingsHelper.PaymentOrderUrl(long.Parse(paymentModel.ProductOrderId))" class="btn secondary_btn">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                        </svg>مشاهده سفارش
                                    </a>
                                }
                                else
                                {
                                    <a href="@AppSettingsHelper.PaymentWalletUrl(paymentModel.WalletId ?? 0)" class="btn secondary_btn">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                        </svg>مشاهده جزئیات
                                    </a>
                                }
                               
                            }

                        </div>

                        }





                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="payment_callback faild_payment">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="callback_box">
                        <div class="callback_img"><img src="~/Assets/Payment/images/payment-faild.jpg" alt=""></div>
                        <div class="callback_message">
                            <strong>@Resource.Notification.Unsuccess</strong>
                        </div>
                        @if (paymentModel != null)
                        {
                            <ul class="callback_info">
                                @if (paymentModel.Type.Label == PaymentTypeEnum.PaymentType_ProductOrder.ToString())
                                {
                                    <li>
                                        <strong>شماره سفارش : </strong>
                                        <strong>@paymentModel.ProductOrderId</strong>

                                    </li>
                                }
                                else if (paymentModel.Type.Label == PaymentTypeEnum.PaymentType_Wallet.ToString())
                                {
                                    @if (paymentModel.CallBackTypeLabel == PaymentCallbackTypeEnum.ProductOrder.ToString())
                                    {
                                        <li>
                                            <strong>شماره سفارش : </strong>
                                            <strong>@paymentModel.CallBackId</strong>
                                        </li>
                                    }

                                }
                                <li class="amount_paid">
                                    <strong>مبلغ : </strong>
                                    <strong>@Model.Data?.Amount.ToString("n0") تومان</strong>
                                </li>
                            </ul>

                        }

                        <div class="callback_btns">
                            <a href="@AppSettingsHelper.BaseUrl" class="btn secondary_btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door" viewBox="0 0 16 16">
                                    <path d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4H2.5z" />
                                </svg>بازگشت به صفحه اصلی
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


